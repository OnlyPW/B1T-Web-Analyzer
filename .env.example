# Copy this file to .env and adjust the values as needed

# =============================================================================
# RPC Configuration
# =============================================================================
# B1T node RPC connection settings
B1T_RPC_HOST=127.0.0.1
B1T_RPC_PORT=8332
B1T_RPC_USER=your_rpc_username
B1T_RPC_PASS=your_rpc_password
B1T_RPC_TIMEOUT=30
B1T_RPC_MAX_RETRIES=3
B1T_RPC_RETRY_DELAY=1.0

# =============================================================================
# Database Configuration
# =============================================================================
# SQLite database file paths
B1T_TRANSACTIONS_DB=b1t_transactions_v2.db
B1T_ANALYSIS_DB=analysis.db
B1T_JOBS_DB=analysis_jobs.db
B1T_BLOCKCHAIN_DB=blockchain_analyzer.db

# =============================================================================
# Web Application Configuration
# =============================================================================
# Flask secret key for session management
SECRET_KEY=your-secret-key-change-this-to-something-secure

# Web server configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=False

# =============================================================================
# Analysis Configuration
# =============================================================================
# Analysis parameters
ANALYSIS_BATCH_SIZE=1000
ANALYSIS_MAX_WORKERS=4
ANALYSIS_TIMEOUT=3600

# =============================================================================
# Logging Configuration
# =============================================================================
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
LOG_FILE=b1t_analyzer.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# =============================================================================
# Security Configuration
# =============================================================================
# Rate limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# CORS settings
CORS_ENABLED=False
CORS_ORIGINS=*